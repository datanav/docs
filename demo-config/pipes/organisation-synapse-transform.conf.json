{
  "_id": "organisation-synapse-transform",
  "type": "pipe",
  "source": {
    "type": "dataset",
    "dataset": "global-organisation"
  },
  "transform": {
    "type": "dtl",
    "rules": {
      "default": [
        ["comment", "*** Add global properties ***"],
        ["copy", "$ids"],
        ["copy", "rdf:type"],
        ["copy", "global-*:*"],
        ["comment", "*** Flatten arrays ***"],
        ["merge",
          ["map-dict", "_.",
            ["substring", 0, 3900,
              ["join", ";",
                ["string", "_."]
              ]
            ], "_T."]
        ]
      ]
    }
  }
}
